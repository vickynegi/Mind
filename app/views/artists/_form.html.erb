<%= form_for @artist do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :phone %><br>
    <%= f.text_field :phone %>
  </p>
  <p>
    <%= f.label :city %><br>
    <%= f.text_field :city %>
  </p>
  <p>
    <%= f.label :country %><br>
    <%= f.country_select :country %>
  </p>
  <p>
    <%= f.label :username %><br>
    <%= f.text_field :username %>
  </p>
  <p>
    <%= f.label :username %><br>
    <%= f.text_field :encrypted_password %>
  </p>
  <p>
    <%= f.label :about %><br>
    <%= f.text_area :description %>
  </p>
  <p>
  <%= f.submit "Save" %>
  </p>
<% end %>